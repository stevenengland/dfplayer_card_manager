{
  "files.exclude": {
    "**/.mypy_cache": true,
    "**/.pytest_cache": true,
    "**/__pycache__": true
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.formatOnType": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "files.trimTrailingWhitespace": true,
  "flake8.path": [".venv/Scripts/flake8"],
  "mypy-type-checker.path": [".venv/Scripts/mypy"],
  "isort.path": [".venv/Scripts/isort"],
  "isort.importStrategy": "fromEnvironment",
  "black-formatter.path": [".venv/Scripts/black"],
  "python.testing.pytestArgs": ["--no-cov", "--timeout=0", "--e2e"],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.testing.pytestPath": ".venv/Scripts/pytest"
}
